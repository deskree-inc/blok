{
	"name": "@blok-ts/http-middleware",
	"version": "0.1.0",
	"description": "HTTP middleware for integrating Blok workflows into Express.js and Hono applications",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": ["dist", "README.md"],
	"exports": {
		".": {
			"import": "./dist/index.esm.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "rimraf dist && tsc && tsc -p tsconfig.esm.json",
		"dev": "tsc --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check --write .",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"blok",
		"workflow",
		"middleware",
		"express",
		"hono",
		"http",
		"integration",
		"framework",
		"backend"
	],
	"author": "Blok Framework Team",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/deskree-inc/blok.git",
		"directory": "packages/http-middleware"
	},
	"homepage": "https://github.com/deskree-inc/blok#readme",
	"peerDependencies": {
		"express": ">=4.18.0",
		"hono": ">=4.0.0"
	},
	"peerDependenciesMeta": {
		"express": {
			"optional": true
		},
		"hono": {
			"optional": true
		}
	},
	"dependencies": {
		"@blok-ts/runner": "workspace:*",
		"@opentelemetry/api": "^1.7.0",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.10.0",
		"@types/supertest": "^6.0.2",
		"@types/uuid": "^9.0.7",
		"express": "^4.18.2",
		"hono": "^4.8.12",
		"rimraf": "^5.0.5",
		"supertest": "^6.3.4",
		"typescript": "^5.3.3",
		"vitest": "^1.1.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
