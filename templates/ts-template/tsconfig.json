{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"include": ["./src"]
}
