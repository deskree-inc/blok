{
	"compilerOptions": {
	  "target": "es2016",
	  "module": "commonjs",
	  "rootDir": "./",
	  "declaration": true,
	  "sourceMap": true,
	  "outDir": "./dist",
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,
	  "noUnusedLocals": true,
	  "noImplicitReturns": true,
	  "skipLibCheck": true
	},
	"compileOnSave": true,
	"typedocOptions": {
	  "includeVersion": true,
	  "readme": "none",
	  "entryPoints": ["./core/runner/src/index.ts", "./core/shared/src/index.ts"],
	  "plugin": ["typedoc-plugin-markdown"],
	  "publicPath": "https://rp",
	  "fileExtension": ".mdx",
	  "outputs": [
		{
		  "name": "markdown",
		  "path": "./docs/ref"
		}
	  ]
	},
	"include": ["./core/**/*"],
	"exclude": ["node_modules", "README.md", "LICENSE"]
  }